<body>
  <h1>Editing Book</h1>

  <%= form_with model: @book do |f| %>

    <div class="field">
      <label for="book-title">Title</label>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <label for="book-body">Body</label>
      <%= f.text_area :body %>
    </div>


    <div class="field">
    <%= f.submit 'Update Book' %>
    </div>

  <% end %>

  <%= link_to 'Show', book_path(@book.id) %>
  |
  <!--戻るボタン-->
  <%= link_to 'Back', books_path %>

</body>
