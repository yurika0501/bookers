  <p id="notice"></p>
  <h1>Books</h1>

  <table>　<!--テーブルタグ-->
    <thead> <!--表の行（水平方向）をグループ化するタグ-->
      <tr>  <!--表内でセルの行を定義-->
        <th>Title</th> <!--trタグ内の見出しセルを定義-->
        <th>Body</th>
        <th colspan="3"></th>  <!--セルを横に3つつなげる-->
      </tr>
    </thead>


    <tbody>
      <!--投稿して保存されたデータを読み込み-->
      <!--postの部分もしかしてbook-->
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></tb> <!--tdは、テーブルセルの内容を指定-->
          <td><%= book.body %></tb>
          <td><%= link_to 'Show', book %></td>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
          <!--下記の記述がよく分からない-->
          <td><%= link_to 'Destroy', book, method: :delete, date: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>


